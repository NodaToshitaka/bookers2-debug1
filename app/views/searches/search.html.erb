<div class="container">
  <div class="row">
    <%= render 'layouts/errors', obj: @book %>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% if @range == "User" %>
        <h1>Users sesrch for "<%= @word %>"</h1>
        <% if @users.present? %>
          <%= render 'users/index', users: @users %>
        <% else %>
          <p>"<%= @word %>"に関するUserは見つかりませんでした</p>
        <% end %>
      <% elsif @range == "Book" %>
        <h1>Books sesrch for "<%= @word %>"</h1>
        <% if @books.present? %>
          <%= render 'books/index', books: @books %>
        <% else %>
          <p>"<%= @word %>"に関するBookは見つかりませんでした</p>
        <% end %>
      <% elsif @range == "Tag" %>
        <% if @tags.present? %>
          <h1>Books sesrch for tag"<%= @word %>"</h1>
          <% @tags.each do |tag| %>
            <%= render 'books/index', books: tag.books %>
          <% end %>
        <% else %>
          <p>"<%= @word %>"tagに関するBookは見つかりませんでした</p>
        <% end %>
      <% end %>
    </div>
  <div>
</div>