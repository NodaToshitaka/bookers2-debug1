<div class="container">
<% if @range == "User" %>
  <h1>Users sesrch for "<%= @word %>"</h1>
  <% if @users.present? %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p>"<%= @word %>"に関するUserは見つかりませんでした</p>
  <% end %>
<% elsif @range == "Book" %>
  <h1>Books sesrch for "<%= @word %>"</h1>
  <% if @books.present? %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
        <tr>
          <td>Tags:</td>
          <% book.tags.each do |tag| %>
            <td>
              <%= tag.tag_name %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p>"<%= @word %>"に関するBookは見つかりませんでした</p>
  <% end %>
<% elsif @range == "Tag" %>
  <% if @tags.present? %>
    <h1>Books sesrch for tag"<%= @word %>"</h1>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
          <% tag.books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <tr>
            <td>Tags:</td>
            <% book.tags.each do |tag| %>
              <td>
                <%= tag.tag_name %>
              </td>
            <% end %>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>"<%= @word %>"tagに関するBookは見つかりませんでした</p>
  <% end %>
<% end %>
</div>